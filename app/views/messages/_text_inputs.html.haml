= fields_for :record do |form|
  %table{:style=>'width: 300px'}
    %tr
      %td
        = form.label :sms_only, t('messages.sms_text_message_label', :id => @record.id)
        %br
        = form.text_area :sms_only, :size => "40x2"
    %tr
      %td
        = form.label :subject, t('messages.subject_label')
        %br
        = form.text_field :subject
    %tr
      %td
        = form.label :body, t('messages.email_body_label'), :id => 'body-label'
        %br
        = form.text_area :body, :size => "40x4"
    %tr
      %td
        %table
          %tr
            %td
              = form.label :send_email, t('messages.send_email')
              %br
              = form.check_box :send_email
            %td
              = form.label  :send_sms, t('messages.send_sms')
              %br
              = form.check_box  :send_sms         
            %td
              = form.label  :news_update, t('messages.news_update')
              %br
              = form.check_box  :news_update
            %td.not-implemented
              = form.label  :private, t('messages.private_label')
              %br
              = form.check_box  :private, :disabled => 'disabled'

