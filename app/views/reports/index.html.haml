%h4 Reports
%h5 Directory (names, phone numbers and email addresses)
%ul
  %li#directory 
    View in Browser
    %ul 
      %li= link_to 'By family (HTML)', '/reports/directory.html?by=family', :id=>'directory-family'
      %li= link_to 'By location (HTML)', '/reports/directory.html?by=location', :id=>'directory-location'
  %li#directory_pdf
    Printable (PDF)
    = form_tag('/reports/directory.pdf', :method => "get")  do
      .pdf_directory_form
        = render :partial => 'messages/groups'      
        .options-container
          = check_box_tag :report_sorted_by_name
          = label_tag :report_sorted_by_name
          %br
          = check_box_tag :report_sorted_by_location
          = label_tag :report_sorted_by_location
          %br
          = text_field_tag :font_size, '10', :class => 'font_size'
          = label_tag :font_size
        = submit_tag "Download", :id => 'download'

